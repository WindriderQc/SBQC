  fetch(url, {options})
    .then(response => response.json())
    .then(result => {

        console.log('result', result.logs)

         // Check if there are logs and get the keys from the first log entry
        const columns = result.logs.length > 0 ? Object.keys(result.logs[0]).map(key => ({
            title: key.charAt(0).toUpperCase() + key.slice(1), // Capitalize the first letter of the key
