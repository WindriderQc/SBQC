<!-- Authentication Status Badge -->
<!-- Usage: <%- include('partials/authStatus') %> -->

<% if (locals.user) { %>
    <!-- User is logged in -->
    <div class="auth-status logged-in alert alert-success d-flex align-items-center" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <span>
            Logged in as <strong><%= user.name %></strong>
        </span>
        <a href="/login/out" class="btn btn-sm btn-outline-secondary ms-auto">
            <i class="fas fa-sign-out-alt me-1"></i> Logout
        </a>
    </div>
<% } else { %>
    <!-- User is NOT logged in -->
    <div class="auth-status logged-out alert alert-info d-flex align-items-center" role="alert">
        <i class="fas fa-info-circle me-2"></i>
        <span>
            <a href="/login" class="btn btn-sm btn-primary me-2">
                <i class="fas fa-sign-in-alt me-1"></i> Login
            </a>
            for enhanced features
        </span>
    </div>
<% } %>
